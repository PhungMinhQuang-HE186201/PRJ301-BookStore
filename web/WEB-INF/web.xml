    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.homepage.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductDetailsController</servlet-name>
        <servlet-class>controller.homepage.ProductDetailsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashBoardController</servlet-name>
        <servlet-class>controller.admin.DashBoardController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductAdmin</servlet-name>
        <servlet-class>controller.admin.ProductAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthenController</servlet-name>
        <servlet-class>controller.authen.AuthenController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartController</servlet-name>
