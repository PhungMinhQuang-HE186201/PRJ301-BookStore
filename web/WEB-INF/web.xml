        <servlet-name>CartController</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserBillController</servlet-name>
        <url-pattern>/userbill</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserBillDetailsController</servlet-name>
        <url-pattern>/userbillDetails</url-pattern>
